@model IEnumerable<ContractMonthlyClaimSystem.Models.ClaimApplication>

@{
    ViewData["Title"] = "Index";
}

<p>
    <a asp-action="Create" class="btn btn-primary"><i class="fa fa-plus"></i> Add New Claim Application</a>
</p>
<div class="card">
    <div class="card-header">
        <h3 class="card-title">Claim Application List</h3>
    </div>
    <!-- /.card-header -->
    <div class="card-body">
        <table id="example1" class="table table-bordered table-striped">

            <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Lecturer)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NumOfDays)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StartDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EndDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Duration)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ClaimType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Attachment)
            </th>
            
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>

            <th>Edit</th>
            <th>View</th>
            <th>Delete</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Lecturer.FullName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NumOfDays)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StartDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EndDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Duration.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ClaimType.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Attachment)
            </td>
            
            <td>
                @Html.DisplayFor(modelItem => item.Status.Description)
            </td>
            <div class="input-group input-group-lg">
                <div class="input-group-prepend">
                    <button type="button" class="btn btn-warning dropdown-toggle" data-toggle="dropdown">
                        Action
                    </button>
                    <ul class="dropdown-menu">
                        <li class="dropdown-item">
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary"><i class="fa fa-pen"></i> Edit</a>
                        </li>
                        <li class="dropdown-divider"></li>
                                    <li class="dropdown-item">
                                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-warning"><i class="fa fa-eye"></i> View</a>
                                    </li>

                                    <li class="dropdown-divider"></li>
                                    <li class="dropdown-item">
                                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger"><i class="fa fa-trash"></i> Delete</a>
                                    </li>
                                    <li class="dropdown-divider"></li>
                                    <li class="dropdown-item">
                                        <a asp-action="ApproveClaim" asp-route-id="@item.Id" class="btn btn-primary"><i class="fa fa-check"></i> Approve</a>

                                    </li>
                                    <li class="dropdown-divider"></li>
                                    <li class="dropdown-item">
                                        <a asp-action="RejectClaim" asp-route-id="@item.Id" class="btn btn-danger"> <i class="fa fa-cross"></i> Reject</a>

                                    </li>

                    </ul>
                </div>
            </div>
            
              
        </tr>
}
    </tbody>
</table>
</div></div>
